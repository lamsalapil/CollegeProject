
@model NewProduct

@using LifeStyleStore.Data;
@using LifeStyleStore.Data.Enums
@using LifeStyleStore.Data.ViewModels

@{
    ViewData["Title"] = "Update a Product";
    
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>
                Add a New Product
            </h4>
        </p>
        
        <div class="row">
            <div class="col-md-12 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" type="number" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="photo" class="control-label"></label>
                                <input asp-for="photo" class="form-control" />
                                <span asp-validation-for="photo" class="text-danger"></span>
                            </div>
                       
                        
                            
                            <div class="form-group">
                                <label asp-for="productCatagory" class="control-label"></label>
                                <select asp-for="productCatagory" class="form-control" asp-items="Html.GetEnumSelectList<productCategory>()"></select>
                                <span asp-validation-for="productCatagory" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="productgender" class="control-label"></label>
                                <select asp-for="productgender" class="form-control" asp-items="Html.GetEnumSelectList<productgender>()"></select>
                                <span asp-validation-for="productgender" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="BrandIds" class="control-label"></label>
                                <select asp-for="BrandIds" class="form-control" asp-items="ViewBag.Brands"></select>
                                <span asp-validation-for="BrandIds" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="20" ></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        
                        
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right"/>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>

                </form>

            </div>
        </div>
    </div>



</div>

@section Scripts{
    <script>
        $(document).ready(function(){
            var output = document.getElementById("ImageUrlPreview");
            output.src = $("#photo").val();
        })


        $("#photo").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}